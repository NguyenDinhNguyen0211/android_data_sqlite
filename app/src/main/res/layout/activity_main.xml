<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="54dp">

        <Button
            android:id="@+id/btnCreDb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Create Database" />

        <Button
            android:id="@+id/btnDelDb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Delete Database" />

        <Button
            android:id="@+id/btnCreTbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Create Table" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDelTbl"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#969FA5"
                android:text="Delete Table" />

            <EditText
                android:id="@+id/txtDelTbl"
                android:layout_width="198dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Type Table to delete"
                android:inputType="textPersonName"
                android:text="" />

        </LinearLayout>

        <Button
            android:id="@+id/btnInsRowTblLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Insert Row to tbllop" />

        <Button
            android:id="@+id/btnDelRowTblLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Delelte Row From tbllop" />

        <Button
            android:id="@+id/btnUpdateRowTblLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Update Row to tbllop" />

        <Button
            android:id="@+id/btnQueryTblLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Querying data tbllop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnInsSv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#969FA5"
                android:layout_weight="1"
                android:text="Insert Student" />
            <EditText
                android:id="@+id/txtMalop"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:hint="Type malop to reference"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>
        <Button
            android:id="@+id/btnQuerySvByLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#969FA5"
            android:text="Querying Sinhvien by malop" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>